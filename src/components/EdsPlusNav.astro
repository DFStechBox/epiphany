---
import TopNav from "./TopNav.astro";
import ePortrait from "../assets/images/ePortrait2.jpg";
import { Image } from 'astro:assets';
import eds from '../assets/images/edslogo12.svg'
---

<section class="w-full mt-12 flex flex-wrap md:flex-nowrap">
  <div class="grid justify-items-center content-center mx-auto basis-1/4 md:ml-8">
    <div class=" z-[-1] back"></div>
    <div class="image transform -translate-x-6 my-[-22rem]">
      <Image
        height={380}
        width={280}
        src={ePortrait}
        alt="Elain's Portrait"
        quality={"max"}
      />
    </div>
  </div>

  <div class="flex flex-col mx-auto w-full my-10 basis-3/4">
    <p class="welcome justify-start ml-32 lg:text-3xl py-0 my-0 leading-none">Welcome, i'm</p>
    <p class="edsName mt-8 text-5xl lg:text-8xl md:text-7xl text-center pb-0 leading-none">
      Elaine Denald Stewart
    </p>
    <p class="profession text-center text-2xl md:text-3xl mt-4 leading-none">Writer & Author</p>
    
    <p class="books text-center mt-12 text-3xl border-t border-b">
      Epiphany & Rhymes Books
      </p>
    </div>
</section>
<section>
  <div class="">
    <TopNav />
  </div>
</section>

<style>
  .edsName {
    font-family: "Tangerine", cursive;
  }

  .welcome {
    font-family: 'Dancing Script Variable', cursive;
  }

  .profession {
    font-family: 'Cormorant Garamond', serif;
    font-weight: 500;
  }

  .back {
    height: 380px;
    width: 280px;
    background-color: #BAC5A4;
    /* align-content: end;
    justify-content: start; */

  }

  .books {
    font-family: 'Cormorant Upright', serif;
  }

  .wrapper {
    /* border: 1px solid red; */
    /* grid-template-columns: auto auto;
    grid-template-rows: auto; */
  }
</style>
